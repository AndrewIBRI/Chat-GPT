| eval volume=replace(volume, "0-500000", "0k-500k"),
       volume=if(volume=="0k-500k", volume,
                  if(volume>="1000000", replace(round(volume/1000000, 1), "\\.0$", "") . "M",
                     if(volume< "1000000", replace(round(volume/1000, 1), "\\.0$", "") . "k", "-")
                  )
       )
